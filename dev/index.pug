doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="css/style.css")
        title Web Monitor
    body
        .modal#page_registry
            .modal_background
            .modal_content
                .hero
                    h2.title Registra una p치gina
                    p.subtitle Dinos que p치gina quieres que revisemos
                form.form(action="#")
                    .form_control
                        label(for="page_name") Nombre
                        input#page_name(type="text")
                    .form_control
                        label(for="page_url") URL
                        input#page_name(type="url")
                    .buttons
                        button.button--primary(type=submit) Guardar
                        button.button--warn(type=reset) Limpiar
                        button.button--danger Cancelar

        .modal#phrase_registry
            .modal_background
            .modal_content
                .hero
                    h2.title Registra una frase
                    p.subtitle Las frases apareceran aleatoriamente cuando una pagina este fuera de linea
                form.form(action="#")
                    .form_control
                        label(for="page_url") Frase
                        input#page_name(type="url")
                    .buttons
                        button.button--primary(type=submit) Guardar
                        button.button--warn(type=reset) Limpiar
                        button.button--danger Cancelar

        .hero.is-link 
            .hero-body
                h1.title.is-size-1 Web Monitor
                p.subtitle.is-size-6 Atento a cuando internet se cae.

        .navbar.mb-5
            .container
                .navbar-brand
                    .navbar-burger(role="button" data-target="mainMenu" aria-label="menu" aria-expanded="false")
                        span(aria-hidden="true")
                        span(aria-hidden="true")
                        span(aria-hidden="true")
                .navbar-menu#mainMenu
                    .navbar-end
                        .navbar-item
                            button.is-medium.button.is-info.is-light(title="Agregar P치gina")
                                span.icon
                                    i.fa.fa-globe
                                span Administrar P치ginas
                        .navbar-item
                            button.is-medium.button.is-info.is-light(title="Agregar Frase")
                                span.icon
                                    i.fa.fa-pencil
                                span Administar Frases
                        .navbar-divider
                        .navbar-item.is-hidden-desktop
                            button.is-medium.button.is-success.is-light(title="Agregar Frase")
                                span.icon
                                    i.fa.fa-pencil
                                span Mostrar solo en servicio
                        .navbar-item.is-hidden-desktop
                            button.is-medium.button.is-danger.is-light(title="Agregar Frase")
                                span.icon
                                    i.fa.fa-pencil
                                span Mostrar solo fuera de servicio

        .container
            .columns.has-text-centered
                .column
                    h3.is-size-3 En servicio
                    .registries
                        .registry.registry--up
                            .registry__page_name
                                a Nombre de la pagina :O
                .column
                    h3.is-size-3 Fuera de servicio
                    .registries
                        .registry.registry--down
                            .registry__time
                                p 00:00:00
                            .registry__page_name
                                a Nombre de la pagina :O
                            .registry__actions
                                button.button.is-info Actualizar
                        .registry.registry--recovered
                            .registry__time
                                p 00:10:33
                            .registry__page_name
                                a Nombre de la pagina :O
                            .registry__actions
                                button.button.is-warning Confirmar
            
        footer.footer.footer--center
            p.subtitle Created by 
                span.bold @manicar2093